<div class="row">
  {{#if userLogged}}
  {{#each categoryFilms}}
  <div class="col s12 m4">
    <div class="card hoverable">
      <div class="card-image">
        <img src="/images/{{this.name}}.jpg">
        <span class="card-title">{{this.name}}</span>
        <a class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">play_arrow</i></a>
      </div>
      <div class="card-content">
        <p>{{this.description}}</p>
      </div>
      <div class="card-action">
        <h6 class"orange">{{this.price}} рублей</h6>
      </div>
    </div>
  </div>
  {{/each}}
  {{else}}
  {{#each categoryFilms}}
  <div class="col s12 m4">
    <div class="card">
      <div class="card-image">
        <img src="/images/{{this.name}}.jpg">
        <span class="card-title">{{this.name}}</span>
        <a class="btn-floating halfway-fab waves-effect waves-light green"><i class="material-icons">play_arrow</i></a>
      </div>
      <div class="card-content">
        <p>{{this.description}}</p>
      </div>
      <div class="card-action">
        <h6 class"orange">{{this.price}} рублей</h6>
      </div>
    </div>
  </div>
  {{/each}}
  {{/if}}
</div>